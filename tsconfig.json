{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "./src/**/*.ts",
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
  }
}
